---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Progress from '../components/Progress.astro';
import Timeline from '../components/Timeline.astro';
---

<Layout title="Portfolio">

	WIN+. = 💩🍀🚑
	<section id="hero">
		<Hero />
	</section>
	<section id="skills">
		<div class="skills-list">
			<Progress title="HTML" progress="42" color="green" />
			<Progress title="CSS" progress="20" color="red" />
			<Progress title="PHP" progress="70" color="#dd0077" />
			<Progress title="C#" progress="10" color="#0000ff" />
			<Progress title="Word" progress="30" color="#0000ff" />
			<Progress title="Excel" progress="20" color="#00aa00" />
		</div>
	</section>
	<section id="timeline">
		<Timeline />
	</section>
	<section id="projects"></section>
	
</Layout>

<style>
	.skills-list {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		align-items: center;
		gap: 1rem;
	}

</style>