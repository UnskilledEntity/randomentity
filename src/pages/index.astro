---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Progress from '../components/Progress.astro';
---

<Layout title="Portfolio">

	WIN+. = 💩🍀🚑
	<section id="hero">
		<Hero />
	</section>
	<section id="skills">
		<div class="skills-list">
			<Progress title="HTML" progress="42" color="green" />
			<Progress title="CSS" progress="20" color="red" />
			<Progress title="PHP" progress="90" color="fuchsia" />
		</div>
	</section>
	<section id="timeline"></section>
	<section id="projects"></section>
	
</Layout>

<style>
	.skills-list {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		align-items: center;
		gap: 1rem;
	}
</style>