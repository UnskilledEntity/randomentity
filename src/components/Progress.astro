---
interface Props {
	title: string;
	progress: string;
	color: string;
}

const { title, progress, color } = Astro.props;
---
<li class="progress">
    <h3>{title}</h3>
    <div class="skill-shadow">
        <div class="skill-bar" style={`width: ${progress}%`}>
            <span class="value">{progress}%</span>
        </div>
    </div>
</li>


<style define:vars={{color}}>
    li.progress {
        display: flex;
        flex-direction: column;
        justify-content: center;
        width:40%;
    }
    li.progress .skill-shadow {
        background-color: #3030307b;
        border-radius: 1rem;
        width: 100%;
    }
    li.progress h3 {
        margin-bottom: 0.3rem;
        margin-top: 0rem;
    }
    .skill-shadow .skill-bar {
        background-color: var(--color);
        box-shadow: 0 0 5px var(--color), 0 0 10px var(--color);
        border-radius: 1rem;
        padding: 0.5rem;
        font-style: italic;
        color: #eeeeee;
        text-shadow: 1px 1px 2px #303030;
        font-size: 1em;
        font-weight:bold;
        line-height:50%;
    }
    /* .skill-bar > span.value::after {
        content: " %";
    } */
</style>